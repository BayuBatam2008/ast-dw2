---
import {
	TextCardSection,
	Container,
} from '@littlesticks/odyssey-theme-components';
import Layout from '../../layouts/Page.astro';
import HeroSection from '../../components/sections/heros/HeroSection.astro';

const seo = {
	title: '#laporan | SPMP',
	description: 'Channel #laporan',
};
---

<Layout {seo}>
	<style>
  .youtube-embed__container {
    margin-bottom: 1rem;
    aspect-ratio: 9/16;
    border-radius: 0.5rem;
    overflow: hidden;
    z-index: 1;
  }

  .youtube-embed__container iframe {
    width: 100%;
    height: 100%;
  }

  @supports not (aspect-ratio: 9 / 16) {
    .youtube-embed__container {
      position: relative;
      padding-bottom: 177.77%;
      padding-top: 30px;
      height: 0;
      overflow: hidden;
    }
    .youtube-embed__container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  }
</style>
        <Container>
		<TextCardSection>
			<h2>#laporan</h2>
			<p>
				Semua bukti-bukti yang sudah didapatkan para intelijen dikirimkan disini untuk dianalisa maupun dipakai.
			</p>
		</TextCardSection>
		<section>
			<div class={`youtube-embed__container`}>
                         <iframe src={`https://dw2-html.vercel.app/SPMP_Laporan.html`} title="#laporan" frameborder="0" sandbox></iframe>
                        </div>
		</section>
	</Container>
</Layout>
